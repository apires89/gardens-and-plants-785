<div class="container">
  <div class="row justify-content-center">
   <div class="col">
    <h1>Add new tag for <%= @plant.name %></h1>
    <%= simple_form_for [@plant, @plant_tag] do |f| %>
      <%= f.association :tag, input_html: { multiple: true, class:"select2", data: {controller: "select2"}}, include_hidden: false %>
      <%= f.submit "Add Tag", class: "btn btn-primary" %>
    <% end %>
   </div>
  </div>
</div>
